<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color_dark"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calculatorResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/result_display"
        android:textSize="60sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/firstColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorResult">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/btn_clear"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_normal"
            android:contentDescription="@string/btn_clear_description"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_backspace"
            android:tint="@color/white"
            android:textColor="@color/white"
            android:background="@color/btn_color_normal"
            android:contentDescription="@string/btn_backspace_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/btn_percentage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/btn_color_normal"
            android:contentDescription="@string/btn_percentage_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:text="@string/btn_division"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_operators"
            android:contentDescription="@string/btn_division_description"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/secondColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstColumn">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_light"
            android:contentDescription="@string/btn_clear_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="8"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_light"
            android:contentDescription="@string/btn_backspace_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="9"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_light"
            android:contentDescription="@string/btn_percentage_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:text="X"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/btn_color_operators"
            android:contentDescription="@string/btn_division_description"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>